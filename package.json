{
  "name": "tgtg-notifier",
  "description": "Monitors your favorite TGTG Store for newly available items",
  "author": "Nyrrell",
  "version": "1.1.16",
  "type": "module",
  "main": "src/app.js",
  "license": "MIT",
  "scripts": {
    "dev": "node --loader ts-node/esm src/app.ts",
    "dev:watch": "node --watch --loader ts-node/esm src/app.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/app.js",
    "format": "prettier --write ./src ./test",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config test/jest-config.json",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "Too Good To Go",
    "Notifier"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.75",
    "jest": "^29.7.0",
    "prettier": "2.8.3",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@keyv/sqlite": "^4.0.1",
    "class-validator": "^0.14.1",
    "croner": "^6.0.7",
    "keyv": "^5.2.3",
    "undici": "^7.3.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "engines": {
    "node": ">=20.18.1"
  }
}
