{
  "name": "tgtg-notifier",
  "description": "Monitors your favorite TGTG Store for newly available items",
  "author": "Nyrrell",
  "version": "1.1.9",
  "type": "module",
  "main": "src/app.js",
  "license": "MIT",
  "config": {
    "debug": "dev,res"
  },
  "scripts": {
    "dev": "NODE_DEBUG=$npm_package_config_debug node --loader ts-node/esm src/app.ts",
    "dev:watch": "NODE_DEBUG=$npm_package_config_debug node --watch --loader ts-node/esm src/app.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/app.js",
    "format": "prettier --write ./src"
  },
  "keywords": [
    "Too Good To Go",
    "Notifier"
  ],
  "devDependencies": {
    "@types/node": "^18.11.0",
    "prettier": "2.8.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@keyv/sqlite": "^3.6.2",
    "class-validator": "^0.14.1",
    "croner": "^6.0.1",
    "keyv": "^4.5.0"
  },
  "engines": {
    "node": ">=18"
  }
}
