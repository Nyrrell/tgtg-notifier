{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rewriteRelativeImportExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "alwaysStrict": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  }
}
