{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "strict": true,
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "paths": {
      "*": ["src/@types"]
    }
  },
  "include": ["src/**/*"]
}
